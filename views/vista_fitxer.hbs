<header>
	<div class="cd-nugget-info">
		Title
	</div>
	<h1>Versions del fitxer <span id="path">{{file}}</span></h1>
</header>

<section id="cd-timeline" class="cd-container">
	{{#each commits}}
	<div class="cd-timeline-block">
		<div class="cd-timeline-img" style="background: lightcoral">
			<img src="/img/cd-icon-picture.svg" alt="Picture">
		</div> <!-- cd-timeline-img -->
		
		<div class="cd-timeline-content">
			<h2>{{commit}} - {{author}}</h2>
			<p>{{message}}</p>
			<button class="btn btn-default" onClick="restore_file(event)" tag="{{commit}}">Recuperar</button>
            <button class="btn btn-default" onClick="diff_file(event)" tag="{{commit}}">Diff</button>
			<span class="cd-date">{{date}}</span>
		</div> <!-- cd-timeline-content -->
	</div> <!-- cd-timeline-block -->
	{{/each}}
</section>