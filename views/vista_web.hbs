<h1>Fitxers disponibles</h1>
	{{#each fitxers}}
        <p><a href="{{../pare}}/{{this}}">{{this}} - {{size}} B</a></p>
    {{/each}}
</div>

<button onClick="backup_web(event)">Backup</button>
<button onClick="undo_restore(event)">Desfer Restaurar</button>

<header class="header">
	<h1>Versions de la web <span id="path">{{pare}}</span></h1>
</header>

<section id="cd-timeline" class="cd-container">
	{{#each commits}}
	<div class="cd-timeline-block">
		<div class="cd-timeline-img">
			<img src="/img/cd-icon-picture.svg" alt="Picture">
		</div> <!-- cd-timeline-img -->
		
		<div class="cd-timeline-content">
			<h2>{{commit}} - {{author}}</h2>
			<p>{{message}}</p>
            <button class="btn btn-default" onClick="restore_web(event)" tag="{{commit}}">Recuperar</button>
            <button class="btn btn-default" onClick="diff_web(event)" tag="{{commit}}">Diff</button>
            <button class="btn btn-default" onClick="diff_tree_web(event)" tag="{{commit}}">Diff_Tree</button>
			<span class="cd-date">{{date}}</span>
		</div> <!-- cd-timeline-content -->
	</div> <!-- cd-timeline-block -->
	{{/each}}
</section>

