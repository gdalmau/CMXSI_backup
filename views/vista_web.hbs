<link href="/bower_components/toastr/toastr.css" rel="stylesheet"/>
<h1>Fitxers disponibles</h1>
	{{#each fitxers}}
        <p><a href="{{../pare}}/{{this}}">{{this}} - {{size}} B</a></p>
    {{/each}}
</div>

<button onClick="backup_web(event)">Backup</button>
<button onClick="undo_restore(event)">Desfer Restaurar</button>

<header>
	<div class="cd-nugget-info">
		Title
	</div>
	<h1>Versions de la web <span id="path">{{pare}}</span></h1>
</header>

<section id="cd-timeline" class="cd-container">
	{{#each commits}}
	<div class="cd-timeline-block">
		<div class="cd-timeline-img" style="background: lightcoral">
			<img src="/img/cd-icon-picture.svg" alt="Picture">
		</div> <!-- cd-timeline-img -->
		
		<div class="cd-timeline-content">
			<h2>{{commit}} - {{author}}</h2>
			<p>{{message}}</p>
			<a id="restaurar_{{commit}}" tag="{{commit}}" href="#0" class="restore cd-read-more">Recuperar</a>
			<a id="diff_{{commit}}" tag="{{commit}}" href="#0" class="diff cd-read-more">DIFF</a>
			<a id="diff_tree_{{commit}}" tag="{{commit}}" href="#0" class="diff_tree cd-read-more">DIFF TREE</a>
			<span class="cd-date">{{date}}</span>
		</div> <!-- cd-timeline-content -->
	</div> <!-- cd-timeline-block -->
	{{/each}}
</section>

